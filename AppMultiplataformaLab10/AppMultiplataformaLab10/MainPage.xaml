<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMultiplataformaLab10.MainPage">

    <StackLayout BackgroundColor="White">
        <Frame BackgroundColor="Orange" Padding="10" Margin="10" >
            <Label Text="Laboratorio 10" HorizontalTextAlignment="Center"  
                   FontSize="26" TextColor="White"/>
        </Frame>
        <Label Text="DataBinding Views" TextColor="White" FontSize="Title" 
               HorizontalTextAlignment="Center" Padding="30,10,30,10"/>

        <StackLayout HorizontalOptions="Center">
            <Button x:Name="Item1" Text="ViewToViewDemo" BackgroundColor="Yellow"/>
            <Button x:Name="Item2" Text="BindingModeDemo" BackgroundColor="Yellow"/>
        </StackLayout>

        <StackLayout HorizontalOptions="Center">
            <Button x:Name="Item3" Text="ListViewDemo" BackgroundColor="Yellow"/>
            <Button x:Name="Item4" Text="PickerDemo" BackgroundColor="Yellow"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
